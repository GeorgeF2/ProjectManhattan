<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_margin="5dp"
    android:scrollbarStyle="outsideOverlay"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:id="@+id/addresses_drivey_layout"
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <ImageView
            android:id="@+id/addresses_pictures"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/map" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addresses_pictures"
            android:orientation="vertical"
            android:layout_margin="@dimen/layout_padding">
            <TextView
                android:id="@+id/addresses_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THIS WILL CHANGE ON THE FLY"
                />
            <TextView
                android:id="@+id/addresses_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOPEFULLY WHEN THIS ACTUALLY APPEARS, THEN THIS WILL CHANGE"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/addresses_go_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/go_button"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="#03A9F4"

                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>